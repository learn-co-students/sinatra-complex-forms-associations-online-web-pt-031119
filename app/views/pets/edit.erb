<h1>Update Pet</h1>
 
 <form action="/pets/<% @pets.id %>" method="post">
 <input id="hidden" type="hidden" name="_method" value="patch">

 <label>Name:</label><br>
 <input type"text" name="pet[name]" id="pet_name" value="<% @pet.name %>">

 <label>Choose an existing owner:</label>
 <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" id="<% owner.id %>" value="<% owner.id %>" <%= 'checked' if @pet.owner.include?(owner) %>><%= owner.name %></input>
 <% end %>

 <label>and/or create a new owner:</label><br>
 <label>name: </name>
 <input type="text" name="owner[name]" id="owner_name"></input>

 <input type="submit" value="Update Pet">

 </form>

