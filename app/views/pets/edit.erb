<h1>Update Pet</h1>
  <form action='/pets/<%=@pet.id%>' method='post'>
    <input id='hidden' type='hidden' name='_method' value='patch'>
    <p><label>Name:</label></p>
    <p><input id='pet_name' type='text' name='pet[name]' value="<%=@pet.name%>"></p>
    <p><label>Choose an existing owner:</label></p>
    <br>
    <%@owners.each do |owner|%>
      <input type='radio' name='pet[owner_id]' id='<%=owner.id%>' value='<%=owner.id%>'<%='checked' if @pet.owner.name==owner.name%>><%=owner.name%></input>
    <% end %>
    <br>
    <p><label>and/or create a new owner:</label></p>
    <p><label>Name:</label></p>
    <p><input id='owner_name' type='text' name='owner[name]'></p>
    <p><input type='submit' id='submit' value='Update Pet'></p>
  </form>
